<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_regist_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base47dp"
        android:src="@drawable/regist_success_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base21dp"
        android:text="提现申请成功,请等待处理"
        android:textColor="@color/gray"
        android:textSize="@dimen/base14dp" />

    <TextView
        android:id="@+id/tv_regist_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_regist_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base12dp"
        android:singleLine="true"
        android:text="次日起1-2个工作日到账(双休和法定节假日顺延)"
        android:textColor="#999"
        android:textSize="@dimen/base12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_enchashment_act_to_my_account"
            android:layout_width="0dip"
            android:layout_height="@dimen/base43dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_base_line_btn"
            android:text="我的账户"
            android:textColor="@color/content_base" />

        <Button
            android:id="@+id/bt_enchashment_act_to_invest"
            android:layout_width="0dip"
            android:layout_height="@dimen/base43dp"
            android:layout_marginLeft="@dimen/base15dp"

            android:layout_marginRight="@dimen/base15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_base_line_btn"
            android:text="返回首页"
            android:textColor="@color/content_base" />
    </LinearLayout>

</LinearLayout>