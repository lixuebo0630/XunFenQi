<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base15dp"
        android:orientation="vertical" >

        <include layout="@layout/diver" />

        <com.xunfenqi.view.EditTextWithDelete
            android:id="@+id/et_modify_pwd_act_old_pwd"
            style="@style/content_editText"
            android:background="#ffffff"
            android:hint="原密码"
            android:inputType="textPassword"
            android:singleLine="true" >
        </com.xunfenqi.view.EditTextWithDelete>

        <include layout="@layout/diver_short" />

        <com.xunfenqi.view.EditTextWithDelete
            android:id="@+id/et_modify_pwd_act_new_pwd"
            style="@style/content_editText"
            android:background="#ffffff"
            android:hint="新密码"
            android:inputType="textPassword"
            android:singleLine="true" >
        </com.xunfenqi.view.EditTextWithDelete>

        <include layout="@layout/diver_short" />

        <com.xunfenqi.view.EditTextWithDelete
            android:id="@+id/et_modify_pwd_act_confirm_new_pwd"
            style="@style/content_editText"
            android:background="#ffffff"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:singleLine="true" >
        </com.xunfenqi.view.EditTextWithDelete>

        <include layout="@layout/diver" />

        <Button
            android:id="@+id/btn_modify_pwd_act_modify"
            style="@style/content_button"
            android:layout_marginTop="@dimen/base30dp"
            android:text="修改"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>