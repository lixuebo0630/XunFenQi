<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_cus_dia"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="请输入交易密码"
        android:textColor="#88000000"
        android:textSize="@dimen/base17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:gravity="center"
        android:text="-"
        android:textColor="#88000000"
        android:textSize="@dimen/base14dp"
        />

    <com.xunfenqi.view.EditTextWithDelete
        android:id="@+id/et_dialog_with_edit_deal_pwd"
        android:layout_width="@dimen/base220dp"
        android:layout_height="@dimen/base35dp"
        android:layout_marginTop="@dimen/base5dp"
        android:layout_marginBottom="@dimen/base25dp"
        android:background="@drawable/shape_gray_line"
        android:gravity="left|center"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:padding="@dimen/base5dp"
        android:singleLine="true" />
    <!-- </LinearLayout> -->

	<include layout="@layout/diver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dialog_with_edit_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/base17dp"
            android:textColor="@color/content_base" />

		<include layout="@layout/diver_v"/>
        <Button
            android:id="@+id/bt_dialog_with_edit_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/content_base"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="@dimen/base17dp"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>