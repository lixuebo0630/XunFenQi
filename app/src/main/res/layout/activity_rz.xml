<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/base15dp"
        android:background="#E1E1E1" />

    <com.xunfenqi.view.EditTextWithDelete
        android:id="@+id/et_rz_act_username"
        style="@style/content_editText"
        android:background="@color/white"
        android:hint="用户名"
        android:inputType="text"
        android:singleLine="true"></com.xunfenqi.view.EditTextWithDelete>

    <include layout="@layout/diver_short" />

    <com.xunfenqi.view.EditTextWithDelete
        android:id="@+id/et_rz_act_password"
        style="@style/content_editText"
        android:background="@color/white"
        android:hint="密码"
        android:inputType="text"
        android:singleLine="true"></com.xunfenqi.view.EditTextWithDelete>

    <include layout="@layout/diver" />

    <Button
        android:id="@+id/btn_forget_pwd2_act_confirm"
        style="@style/content_button"
        android:layout_marginTop="@dimen/base15dp"
        android:text="确认"
        android:textColor="@color/white" />

</LinearLayout>