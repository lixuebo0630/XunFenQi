<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_regist_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base47dp"
        android:src="@drawable/regist_success_iv" />

    <TextView
        android:id="@+id/tv_regist_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_regist_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base21dp"
        android:singleLine="true"
        android:text="感谢您注册迅分期"
        android:textColor="#999"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_regist_success_safesetting"
        style="@style/content_button"
        android:layout_below="@id/tv_regist_success"
        android:layout_marginTop="@dimen/base46dp"
        android:text="进入首页" />

    <TextView
        android:id="@+id/bt_regist_success_jump2home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bt_regist_success_safesetting"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base17dp"
        android:clickable="true"
        android:text="随意看看"
        android:textColor="#3ea3fe"
        android:textSize="14sp" />

</RelativeLayout>