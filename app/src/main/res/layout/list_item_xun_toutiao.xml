<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base190dp"
    android:layout_marginLeft="@dimen/base13dp"

    android:layout_marginRight="@dimen/base13dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_height="@dimen/base57dp">

        <ImageView
            android:layout_width="@dimen/base16dp"
            android:layout_height="@dimen/base16dp"
            android:layout_gravity="center_vertical"

            android:src="@drawable/xuntoutiao_item"
            />

        <TextView
            android:id="@+id/tv_xun_toutiao_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base9dp"
            android:text="什么是讯分期?"
            android:textColor="@color/black"
            android:textSize="@dimen/base16dp" />

        <TextView
            android:textSize="@dimen/base9dp"
            android:layout_width="wrap_content"
            android:id="@+id/tv_xun_toutiao_item_new_flag"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base6dp"
            android:layout_marginTop="@dimen/base11dp"
            android:text="NEW"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_xun_toutiao_item_time"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="2016-07-01"
                android:textColor="@color/content_text_gray"
                android:textSize="@dimen/base12dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_xun_toutiao_item_content"
        android:text="w22222222222222222222222222222222222222222222222222222"
        android:textColor="@color/content_text_gray2"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_height="@dimen/base85dp" />

    <include layout="@layout/diver"/>

</LinearLayout>
